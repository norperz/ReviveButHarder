{
  "schemaVersion": 1,
  "id": "revive",
  "version": "${version}",
  "name": "ReviveButHarder",
  "description": "Revive your friends when they died",
  "authors": [
    "norperz/xpb",
    "Original: Globox_Z"
  ],
  "contact": {
    "homepage": "https://github.com/Globox1997/Revive",
    "sources": "https://github.com/norperz/ReviveButHarder",
    "issues": "https://github.com/norperz/ReviveButHarder/issues"
  },
  "license": "MIT",
  "icon": "assets/revive/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.revive.ReviveMain"
    ],
    "client": [
      "net.revive.ReviveClient"
    ],
    "modmenu": [
      "net.revive.config.ModMenuIntegration"
    ],
    "emi": [
      "net.revive.compat.ReviveEmiPlugin"
    ],
    "rei_client": [
      "net.revive.compat.ReviveReiPlugin"
    ]
  },
  "mixins": [
    "revive.mixins.json"
  ],
  "depends": {
    "java": ">=21",
    "minecraft": ">=${minecraft_version}",
    "fabric-api": ">=${fabric_version}",
    "fabricloader": ">=${loader_version}",
    "cloth-config2": ">=${cloth_config_version}"
  },
  "suggests": {
    "another-mod": "*"
  }
}
